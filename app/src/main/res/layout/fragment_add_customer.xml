<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Customer"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/namimg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_name_input"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/name"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Name"
        android:layout_marginLeft="40dp"
        android:background="@drawable/custom_edittext"
        app:layout_constraintLeft_toRightOf="@+id/namimg"
        app:layout_constraintTop_toTopOf="@+id/namimg"
        app:layout_constraintBottom_toBottomOf="@+id/namimg"/>

    <ImageView
        android:id="@+id/namemail"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_email"
        app:layout_constraintTop_toBottomOf="@+id/namimg"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/email"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Email"
        android:layout_marginLeft="40dp"
        android:background="@drawable/custom_edittext"
        app:layout_constraintLeft_toRightOf="@+id/namemail"
        app:layout_constraintTop_toTopOf="@+id/namemail"
        app:layout_constraintBottom_toBottomOf="@+id/namemail"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/namaddr"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_location"
        app:layout_constraintTop_toBottomOf="@+id/namemail"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/adress"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Address"
        android:layout_marginLeft="40dp"
        android:background="@drawable/custom_edittext"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/phonimg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_phone"
        app:layout_constraintTop_toBottomOf="@+id/namaddr"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/phone"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:hint="Enter your Phone Number "
        android:background="@drawable/custom_edittext"
        app:layout_constraintTop_toBottomOf="@+id/adress"
        android:layout_marginTop="5dp"/>
    <!-- <EditText
         android:id="@+id/q_name"
         android:padding="5dp"
         android:layout_marginTop="5dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/custom_edittext"
         android:hint="Enter your name"
         app:layout_constraintTop_toBottomOf="@+id/q_ques"/>

     <EditText
         android:id="@+id/asked_by"
         android:padding="5dp"
         android:layout_marginTop="5dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/custom_edittext"
         android:hint="Question asked by whom ?"
         app:layout_constraintTop_toBottomOf="@+id/q_name"/>-->

    <Button
        android:id="@+id/add_customer"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Add Customer"
        android:background="@drawable/custom_button"
        android:textColor="#fff"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        app:layout_constraintRight_toRightOf="@+id/phone"
        app:layout_constraintLeft_toLeftOf="@+id/phone"/>

</androidx.constraintlayout.widget.ConstraintLayout>