<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintView2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardMaxElevation="5dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintView2">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="5dp"
            android:id="@+id/constraintView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--<de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cir_img"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/admin"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>-->

            <TextView
                android:id="@+id/cir_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="A"
                android:textSize="35sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/circular_textview"/>


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginLeft="15dp"
                android:text="Name"
                android:maxLength="15"
                android:ellipsize="end"
                android:textSize="20sp"
                android:typeface="sans"
                app:layout_constraintTop_toTopOf="@+id/cir_img"
                app:layout_constraintBottom_toBottomOf="@id/cir_img"
                app:layout_constraintLeft_toRightOf="@+id/cir_img" />

            <TextView
                android:id="@+id/Rs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 30"
                android:textStyle="bold"
                android:textColor=" #FF0000"
                android:textSize="18sp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/yupay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You'll Get"
                android:textSize="11sp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@+id/Rs"
                app:layout_constraintRight_toRightOf="parent"/>

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"
                app:layout_constraintBottom_toBottomOf="@id/cir_img"/>-->
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>